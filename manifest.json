{
  "manifest_version": 3,
  "name": "React Story Facebook",
  "description": "Inject custom reactions or content into Facebook Stories.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["db/emoji.json"],
      "matches": ["https://www.facebook.com/*"]
    }
  ]
}
